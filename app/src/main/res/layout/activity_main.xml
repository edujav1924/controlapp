<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edu.controlapp.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerequipos"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ImageButton
                android:id="@+id/encendido"
                android:layout_width="45dp"
                android:layout_height="46dp"
                android:background="@drawable/forma_encendido"
                android:scaleType="centerCrop"
                android:scaleX="1"
                android:scaleY="1.356" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/vmas"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/chmas"
                    android:layout_marginStart="36dp"
                    android:background="@drawable/formas"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:scaleY="1.356" />

                <ImageButton
                    android:id="@+id/chmas"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/selectorshape"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/ic_chmas" />

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selectorshape"
                    android:scaleType="centerCrop"
                    app:srcCompat="@android:drawable/ic_menu_info_details" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/chmenos"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/selectorchmenos"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

                <ImageButton
                    android:id="@+id/vmenos"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/selectorvmenos"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:scaleY="1.356" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/vmenos"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selectorshape"
                    android:text="MENU" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selectorshape">

                <ImageButton
                    android:id="@+id/arriba"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/ok"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@drawable/ic_arrow_up" />

                <ImageButton
                    android:id="@+id/izquierda"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="27dp"
                    android:layout_toStartOf="@+id/ok"
                    android:background="@drawable/selectorchmenos"
                    app:srcCompat="@drawable/ic_arrow_left" />

                <ImageButton
                    android:id="@+id/abajo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/selectorchmenos"
                    app:srcCompat="@drawable/ic_arrow_down" />

                <ImageButton
                    android:id="@+id/derecha"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="27dp"
                    android:layout_toStartOf="@+id/subtiulos"
                    android:background="@drawable/selectorchmenos"
                    app:srcCompat="@drawable/ic_arrow_right" />

                <Button
                    android:id="@+id/ok"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignStart="@+id/abajo"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selectorchmenos"
                    android:text="OK"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/subtiulos"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignStart="@+id/idioma"
                    android:layout_alignTop="@+id/abajo"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@drawable/ic_subtitles" />

                <ImageButton
                    android:id="@+id/idioma"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/arriba"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@drawable/ic_record_voice" />

                <ImageButton
                    android:id="@+id/atras"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignStart="@+id/lista_canales"
                    android:layout_alignTop="@+id/abajo"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@drawable/ic_settings_back" />

                <ImageButton
                    android:id="@+id/lista_canales"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/arriba"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="17dp"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@drawable/ic_list_black_24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/b1"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="29dp"
                    android:fontFamily="sans-serif"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b2"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b3"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="sans-serif"
                    android:text="3"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/b4"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="28dp"
                    android:fontFamily="sans-serif"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b5"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b6"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="39dp"
                    android:fontFamily="sans-serif"
                    android:text="6"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/b7"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="29dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/_7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b9"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="39dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/_9"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/b8"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="@string/_8"
                    android:textSize="24sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/silencio"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/selectorshape"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_silencio" />

                <Button
                    android:id="@+id/b0"
                    style="@android:style/Widget.Button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="0"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/silencio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="41dp"
                    android:background="@drawable/selectorshape"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
